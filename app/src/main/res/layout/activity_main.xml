<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="40dp"
    android:rowCount="6"
    android:columnCount="4">

    <TextView
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:id="@+id/tvOutput"
        android:textSize="18sp"
        android:background="#eee"
        android:textStyle="normal|bold"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:layout_column="0"
        android:padding="10dp"/>

    <Button
        android:text="7"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:id="@+id/btnSeven"
        android:onClick="btnNumberOnClick"
        android:contentDescription="7"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="18sp" />

    <Button
        android:text="8"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:onClick="btnNumberOnClick"
        android:id="@+id/btnEight"
        android:contentDescription="8"
        android:layout_row="1"
        android:layout_column="1"
        android:textSize="18sp" />

    <Button
        android:text="9"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnNine"
        android:onClick="btnNumberOnClick"
        android:contentDescription="9"
        android:layout_row="1"
        android:layout_column="2"
        android:textSize="18sp" />

    <Button
        android:text="DEL"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:onClick="btnDeleteOnClick"
        android:layout_row="5"
        android:layout_column="1"
        android:textSize="18sp" />

    <Button
        android:text="4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnFour"
        android:onClick="btnNumberOnClick"
        android:contentDescription="4"
        android:layout_row="2"
        android:layout_column="0"
        android:textSize="18sp" />

    <Button
        android:text="5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFive"
        android:onClick="btnNumberOnClick"
        android:contentDescription="5"
        android:layout_row="2"
        android:layout_column="1"
        android:textSize="18sp" />

    <Button
        android:text="6"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSix"
        android:onClick="btnNumberOnClick"
        android:contentDescription="6"
        android:layout_row="2"
        android:layout_column="2"
        android:textSize="18sp" />

    <Button
        android:text="รท"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDivide"
        android:onClick="btnOperatorOnClick"
        android:contentDescription="รท"
        android:layout_row="2"
        android:layout_column="3"
        android:textSize="18sp" />

    <Button
        android:text="1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnOne"
        android:onClick="btnNumberOnClick"
        android:contentDescription="1"
        android:layout_row="3"
        android:layout_column="0"
        android:textSize="18sp" />

    <Button
        android:text="2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnTwo"
        android:onClick="btnNumberOnClick"
        android:contentDescription="2"
        android:layout_row="3"
        android:layout_column="1"
        android:textSize="18sp" />

    <Button
        android:text="3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnThree"
        android:onClick="btnNumberOnClick"
        android:contentDescription="3"
        android:layout_row="3"
        android:layout_column="2"
        android:textSize="18sp" />

    <Button
        android:text="x"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMultiply"
        android:onClick="btnOperatorOnClick"
        android:contentDescription="x"
        android:layout_row="1"
        android:layout_column="3"
        android:textSize="18sp" />

    <Button
        android:text="."
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:onClick="btnNumberOnClick"
        android:id="@+id/btnDecimal"
        android:contentDescription="."
        android:layout_row="5"
        android:layout_column="2"
        android:textSize="18sp" />

    <Button
        android:text="0"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnZero"
        android:onClick="btnNumberOnClick"
        android:contentDescription="0"
        android:layout_row="4"
        android:layout_column="1"
        android:textSize="18sp" />

    <Button
        android:text="+"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlus"
        android:onClick="btnOperatorOnClick"
        android:contentDescription="+"
        android:layout_row="3"
        android:layout_column="3"
        android:textSize="18sp" />

    <Button
        android:text="-"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMinus"
        android:onClick="btnOperatorOnClick"
        android:contentDescription="-"
        android:layout_row="4"
        android:layout_column="3"
        android:textSize="18sp" />

    <Button
        android:text="CLR"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        android:onClick="btnClearOnClick"
        android:layout_row="5"
        android:layout_column="0"
        android:textSize="18sp" />

    <Button
        android:text="="
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnEquals"
        android:onClick="btnEvaluateOnClick"
        android:layout_row="5"
        android:layout_column="3"
        android:textSize="18sp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnOpenParenthesis"
        android:layout_row="4"
        android:layout_column="0"
        android:textSize="18sp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCloseParenthesis"
        android:layout_row="4"
        android:layout_column="2"
        android:textSize="18sp" />
</GridLayout>
